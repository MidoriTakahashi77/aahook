{
  "name": "aahook",
  "version": "0.2.0",
  "description": "A CLI tool that displays ASCII art when commands succeed or fail",
  "main": "dist/lib/index.js",
  "bin": {
    "aahook": "./bin/aahook.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node test/test.spec.js",
    "test:bun": "bun test",
    "generate-index": "ts-node scripts/generate-index.ts",
    "validate-arts": "ts-node scripts/validate-arts.ts",
    "validate": "npm run validate-arts",
    "prepublishOnly": "npm run build && npm run validate-arts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "ascii-art",
    "hook",
    "command",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/",
    "dist/",
    "arts/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MidoriTakahashi77/aahook.git"
  },
  "homepage": "https://github.com/MidoriTakahashi77/aahook#readme",
  "bugs": {
    "url": "https://github.com/MidoriTakahashi77/aahook/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
